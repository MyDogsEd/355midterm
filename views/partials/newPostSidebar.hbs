<script defer src="/js/newPostSidebar.js"></script>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">New Post</h5>
        <form id="newPostForm">
            <input name="title" id="newPostTitle" class="form-control mb-2" type="search" placeholder="Post Title"
                aria-label="Title">
            <input name="author" id="newPostAuthor" class="form-control mb-2" type="search" placeholder="Username"
                aria-label="Author">
            <textarea name="content" id="newPostContent" class="form-control mb-2" type="search" placeholder="Text..."
                aria-label="Text"></textarea>
            <button type="button" id="newPostButton" class="btn btn-primary">Create</button>

        </form>

    </div>
</div>